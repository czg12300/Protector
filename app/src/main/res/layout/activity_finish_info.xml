<cn.protector.ui.widget.ResizeLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/root"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="afterDescendants"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <LinearLayout
                android:id="@+id/ll_avator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="15dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="@string/baby_avator"
                    android:textColor="@color/text_content"
                    android:textSize="@dimen/text_content"/>

                <cn.common.ui.widgt.RoundImageView
                    android:id="@+id/riv_avator"
                    android:layout_width="@dimen/avatar"
                    android:layout_height="@dimen/avatar"
                    android:src="@drawable/img_head_boy1"
                    android:layout_marginRight="10dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_right"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_nickname"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <EditText
                        android:id="@+id/ev_baby_nickname"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/trans"
                        android:hint="请输入昵称"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/divider_menu"/>

                <LinearLayout
                    android:id="@+id/ll_relationship"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/relationship"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <TextView
                        android:id="@+id/tv_relationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@color/trans"
                        android:hint="请选择关系"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/ll_sex"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <TextView
                        android:id="@+id/tv_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@color/trans"
                        android:hint="请选择性别"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/divider_menu"/>
                <LinearLayout
                    android:id="@+id/ll_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/baby_birthday"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <TextView
                        android:id="@+id/tv_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@color/trans"
                        android:hint="@string/birthday_hint"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/divider_menu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重(kg)"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <EditText
                        android:id="@+id/ev_weight"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/trans"
                        android:hint="请输入体重"
                        android:inputType="number"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:paddingLeft="10dp"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/divider_menu"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/shoe_size"
                        android:textColor="@color/text_content"
                        android:textSize="@dimen/text_content"/>

                    <EditText
                        android:id="@+id/ev_shoe_size"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:paddingLeft="10dp"
                        android:layout_marginRight="15dp"
                        android:background="@color/trans"
                        android:hint="请输入鞋子尺码"
                        android:inputType="number"
                        android:textColor="@color/text_content"
                        android:textColorHint="@color/gray_999999"
                        android:textSize="@dimen/text_content"/>
                </LinearLayout>


            </LinearLayout>


            <Button
                android:id="@+id/btn_submit"
                style="@style/btn_blue"
                android:layout_margin="15dp"
                android:background="@drawable/btn_selector_blue_r"
                android:text="@string/submit"
                android:textColor="@drawable/text_selector_btn_blue_r"/>
        </LinearLayout>
    </ScrollView>
</cn.protector.ui.widget.ResizeLinearLayout>