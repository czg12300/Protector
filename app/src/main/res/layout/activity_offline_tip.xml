<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/trans_60000000"
    android:descendantFocusability="afterDescendants">

    <LinearLayout
        android:layout_width="@dimen/dialog_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/bg_dialog_select_avator"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:text="@string/offline_tip"
            android:textColor="@color/gray_999999"
            android:textSize="@dimen/text_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/blue_03a9f4"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/btn_selector_gray_blue"
            android:gravity="center"
            android:text="@string/login_now"
            android:textColor="@color/black_333333"
            android:textSize="@dimen/text_content"/>


    </LinearLayout>

</FrameLayout>