<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector_white_gray"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="10dp">

    <cn.common.ui.widgt.RoundImageView
        android:id="@+id/iv_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/img_head_girl1"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="小妮儿"
                android:textColor="@color/black_333333"
                android:textSize="@dimen/text_content"/>

            <TextView
                android:id="@+id/tv_relationship"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="小妮儿"
                android:textColor="@color/gray_757575"
                android:textSize="@dimen/text_litter"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小妮儿"
            android:textColor="@color/black_333333"
            android:textSize="13dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:background="@drawable/btn_selector_red"
        android:text="删除"
        android:textColor="@color/white"
        android:textSize="13dp"
        />

</LinearLayout>